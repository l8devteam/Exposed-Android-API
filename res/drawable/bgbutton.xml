<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <corners android:radius="3dp" />
             <stroke android:width="1dp" android:color="#000000" />
             <gradient  android:angle="-90"  android:startColor="#ffffff" android:endColor="#466be7"  />            
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <corners android:radius="3dp" />
             <stroke android:width="1dip" android:color="#36797f" />
             <solid  android:color="#308d9e"/>       
         </shape>
     </item>  
    <item >
        <shape android:shape="rectangle"  >
             <corners android:radius="3dp" />
             <stroke android:width="1dp" android:color="#000000" />
             <gradient  android:angle="-90"  android:startColor="#81bbfe" android:endColor="#466be7" />            
         </shape>
     </item>
</selector>